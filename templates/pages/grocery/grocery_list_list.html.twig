{% extends 'base.html.twig' %}

{% block title %}Grocery lists{% endblock %}

{% block body %}
    <div class="flex gap-2 flex-col m-3">
        {% for groceryList in groceryLists %}
            <div class="p-2 w-fit rounded-md shadow bg-white border-md border-black">
                <h4 class="">{{ groceryList.name }}</h4>

                <p>{{ groceryList.description }}</p>
            </div>
        {% endfor %}
    </div>

    <div>
        <p>Ajouter une liste</p>
        {{ form_start(form) }}
        {{ form_rest(form) }}
        <button type="submit">Enregistrer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

